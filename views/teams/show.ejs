<%- include('../partials/header') %>

<section id="show-page">
  <div>Team Name: </div>
  <div><%= team.teamName %></div>
</section>

<br><br><h2>Reviews</h2>
<% if (user) { %>
  <form id="add-review-form" method="POST" action="/teams/<%= team._id %>/reviews">
    <label>Review:</label>
    <textarea name="comment"></textarea>
    <label>Rating:</label>
    <select name="rating">
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="5">5</option>
    </select>
    <input type="submit" value="Add Review">
  </form>
<% } %>

<% if (team.reviews?.length) { %>
  <table>
    <thead>
      <tr>
        <th>User</th>
        <th>Review</th>
        <th>Rating</th>
      </tr>
    </thead>
    <tbody>
      <% let total = 0 %>
      <% team.reviews?.forEach(function(r) { %>
        <% total += r.rating %>
        <tr>
          <td class="review-user"><img alt="avatar" src="<%= r.userAvatar %>" referrerpolicy="no-referrer" ><%= r.userName %></td>
          <td><%= r.content %></td>
          <td><%= r.rating %></td>
        </tr>
      <% }); %>
      <tr>
        <td colspan="3"></td>
        <td><strong><%= (total / team.reviews?.length).toFixed(1) %></strong></td>
      </tr>
    </tbody>
  </table>
<% } else { %>
  <h5>No Reviews Yet</h5>
<% } %>
  
<%- include('../partials/footer') %>